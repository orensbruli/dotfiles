# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

# Load all files from .shell/bashrc.d directory
if [ -d $HOME/.bashrc.d ]; then
  for file in $HOME/.bashrc.d/*.sh; do
    echo "Loading $file"
    source $file
  done
fi
unset file;

